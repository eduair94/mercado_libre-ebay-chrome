{
  "name": "MercadoLibre Ebay",
  "description": "Obtener precios de ebay en MercadoLibre",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "/img/16.png",
    "32": "/img/32.png",
    "48": "/img/48.png",
    "128": "/img/128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/img/16.png",
      "32": "/img/32.png",
      "48": "/img/48.png",
      "128": "/img/128.png"
    }
  },
  "content_scripts": [{
    "matches": ["https://mercadolibre.com.uy/*", "https://listado.mercadolibre.com.uy/*"],
    "js": ["js/content_script.js"]
  }],
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.ebay.com/*",
    "https://ebay.com/*",
    "https://mercadolibre.com.uy/*",
    "https://listado.mercadolibre.com.uy/*"
  ]
}